@using Model;

@{
    var ProductList = ViewBag.Product as IEnumerable<Model.Product>;
}


<div style="display:flex">
    <div style="list-style: none;flex:1;white-space:nowrap;">

        @foreach (Product p in ProductList)
         {
            string result = "data:image/jpeg;base64," + Convert.ToBase64String(p.PictureR);

            <article class="table-hover" style="box-sizing:border-box;float:left;width:250px;padding:150px;">

                <div>
                    <a>
                        <img src="@result" style="background-size: cover;" />
                    </a>
                </div>

                <div>
                    <h3>
                        <a>@p.Name</a>
                    </h3>
                    <strong>
                        <span class="product">@p.Price</span>
                    </strong>
                </div>

                <div style="padding-top:50px">

                    @Html.ActionLink("Adauga in cos", "Cart", new {Id = p.ID}, new { @class = "btn btn-primary btn-large" })

                </div>

            </article>
         }
    </div>  

    <div style="flex:1;padding-top:140px;padding-left:120px" >

        @foreach (Product p in ProductList)
         {
            <div>
                <p style="font-family:Impact, Charcoal, sans-serif;font-size:30px">@p.Name</p>
            </div>

            <div>
                <h2>Categorie:</h2>
                <p style="font-family:Courier New, Courier, monospace;font-size:20px">@p.Category</p>
            </div>

            <div>
                <h2>Descriere:</h2>
                <p style="font-family:Courier New, Courier, monospace;font-size:20px">@p.Description</p>
            </div>
         }

    </div>


</div>