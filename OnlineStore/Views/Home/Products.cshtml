@using Model;

@{ 
    var ProductList =  ViewBag.List as IEnumerable<Model.Product>; 
}

<h2>Products</h2>

<div>
    <ul style="list-style: none;">
        <li>
            @foreach (Product p in ProductList)
            {
                string result = "data:image/jpeg;base64," + Convert.ToBase64String(p.PictureR);
                <article class="table-hover" style="box-sizing:border-box;float:left;width:250px">
                    <div>
                        <a href="@Url.Action("Product","Home",new {Id = p.ID})">
                            <img src="@result" style="background-size: cover;"/>
                        </a>
                    </div>
                    <div>
                        <h3>
                            <a href="@Url.Action("Product","Home",new {Id = p.ID})">
                                @p.Name
                            </a>
                        </h3>
                        <strong>
                            <span class="product">@p.Price</span> 
                        </strong>
                    </div>
                </article>
             }
        </li>
    </ul>
</div>